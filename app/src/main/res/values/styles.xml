<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSurfaceInverse</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <!-- Title Styles -->
    <style name="TextContent.TitleMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="TextContent.TitleMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.TitleMedium.MarginLeftRight">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!-- Headline Styles -->
    <style name="TextContent.HeadlineMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
    </style>

    <style name="TextContent.HeadlineMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.HeadlineMedium.MarginLeftRight">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!-- Body Styles -->
    <style name="TextContent.BodyMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="TextContent.BodyMedium.Gray">
        <item name="android:textColor">?attr/colorSurfaceInverse</item>
    </style>

    <style name="TextContent.BodyMedium.MarginLeftRight">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="TextContent.BodyMedium.MarginAll">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TextContent.BodyMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CardView Style -->
    <style name="CardViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardBackgroundColor">?attr/colorOnSurfaceInverse</item>
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>